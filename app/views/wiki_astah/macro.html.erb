<% 
	url_for_rendered_img = url_for(
		:controller => 'wiki_astah',
		:action => 'diagram', 
		:project_id => params[:project_id], 
		:id => params[:id], 
		:version => params[:version],
		:astah => macro[:astah],
		:diagram => macro[:diagram]
	) 
%>

<%= link_to(
	image_tag(url_for_rendered_img, 
		:align => macro[:params][:align],
		:width => macro[:params][:width],
		:height => macro[:params][:height],
		:class => "wiki-astah-macro-image"
	), 
	url_for_rendered_img, 
	:target => macro[:params][:target]
) %>


